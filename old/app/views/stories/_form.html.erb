 <% if @story.errors.any? %>
    <div id="flash_warning" class="flashcontainer">
      <%= image_tag "dialog-warning.png", :alt => "info", :class => "icon" %>
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>

    </div>
  <% end %>

<%= form_for [@project, @story] do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :required => "true", :autofocus => "true" %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %><br />
    <a href="http://daringfireball.net/projects/markdown/syntax">Markdown</a> enabled!
  </div>

  <div class="field">
    <%= f.label :moscow, "Priority" %><br />
    <%= f.select :moscow, Moscow::all %>
  </div>

  <div class="field">
    <%= f.label :points %><br />
    <%= f.select :points, StoryPoint::all %>
  </div>

  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, ["open", "active", "done"] %>
  </div>

  <div class="actions">
    <%= f.submit button_name, :class => "button", :disable_with => 'Saving...' %> or <%= link_to 'go back', :back %>
    <% unless @story.new_record? %>
      <% if can? :destroy, @story %>
        or <%= link_to 'destroy', project_story_path(@project, @story), :confirm => 'Are you sure?', :method => :delete, :class => "button danger" %>
      <% end %>
    <% end %>
  </div>
<% end %>
