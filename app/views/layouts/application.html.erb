<!DOCTYPE html>
<html>
<head>
  <title>Trenches - <%= yield(:title) %></title>
  <meta charset="UTF-8">
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, 'jquery-ui-1.8.10.custom.min', 'jquery.jqplot.min' %>
 
  <!--[if IE]><script language="javascript" type="text/javascript" src="excanvas.js"></script><![endif]-->

  <%= csrf_meta_tag %>
  <link href="http://fonts.googleapis.com/css?family=Droid+Sans:regular,bold" rel="stylesheet" type="text/css" >
  <link href="http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:200,300,400,700" rel="stylesheet" type="text/css" >
</head>
<body>

<div id="container">

	<div id="header">

    <div id="logo"><a href="/">Trenches</a></div>

		<div id="topnav">
			<ul>
        <% if current_user %>
          <li><%= current_user.name %></li>
        <% end %>
        <li><%= link_to "all projects", projects_path %></li>
				<li><a href="#">settings</a></li>
        <li>
          <% if current_user %>
            <%= link_to "sign out", signout_path %>
          <% else %>
            <%= link_to "sign in with GitHub", "/auth/github" %>
          <% end %>
        </li>
			</ul>
		</div>

		<div id="title">
		   <h1><%= h(yield(:title) || "Untitled") %></h1>
		</div>
		
		<%= h(yield(:subnav)) %>

	</div>

	<div id="content">

	  <% flash.each do |name, msg| %>
		<div id="<%= "flash_#{name}" %>" class="flashcontainer">
	  	<%= "<img src=\"/images/dialog-#{name}.png\" alt='info' class='icon' /> ".html_safe %>
	    <%=  msg %>
	  </div>
	  <% end %>

	  <%= yield %>

	</div>

	<div id="footer">
		footer
	</div>

</div>

</body>
</html>
