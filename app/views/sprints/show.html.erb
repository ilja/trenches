<% title "#{@project.name} - #{@sprint.name} [#{@sprint.start_date} - #{@sprint.end_date}]" %>
<%= render "sprints/subnav" %>

<p id="notice"><%= notice %></p>

<p>These stories are in this sprint</p>
<div id="status-menu">
  <ul>
    <li <% if params[:show] == "all" %> class='active'<% end %>><%= link_to 'All', :show => "all" %></li>
    <li <% if params[:show] == "open" %> class='active'<% end %>><%= link_to 'Open', :show => "open" %></li>
    <li <% if params[:show] == "active" %> class='active'<% end %>><%= link_to 'In progress', :show => "active" %></li>
    <li <% if params[:show] == "done" %> class='active'<% end %>><%= link_to 'Done', :show => "done" %></li>
  </ul>
</div>

<div id="storylist">
  <ul>
    <%= render :partial => '/stories/story', :collection => @stories %>
	</ul>
</div>

