<% title "#{@project.name} - #{@sprint.name}" %>
<%= render "sprints/subnav" %>

<p id="notice"><%= notice %></p>

<p>These stories are in this sprint</p>

<div id="status-menu">
  <ul>
    <li><%= link_to 'All', project_stories_path(@project) %></li>
    <li><%= link_to 'Open', open_stories_path(@project) %></li>
	<li><%= link_to 'In progress', active_stories_path(@project) %></li>
	<li><%= link_to 'Done', done_stories_path(@project) %></li>
  </ul>
</div>

<div id="storylist">
  <ul>
    <%= render :partial => '/stories/story', :collection => @sprint.stories %>
	</ul>
</div>

