<% title "#{@project.name} - #{@sprint.name} [#{@sprint.start_date} - #{@sprint.end_date}]" %>
<% render_subnav "sprints/subnav" %>

<q><%= @sprint.goal %></q>

<%= render :partial => 'stories/status-menu', :locals => {:show_new_story => false, :show_my_stories => true, :active_menu_item => show_scope} %>

<div id="storylist" class="sprint">
  <ul>
    <%= render :partial => '/stories/story', :collection => @stories %>
	</ul>
</div>


<div id="burndown"></div>

<script type="text/javascript">
$(function() {
  xticks = <%= @sprint.workdays_as_ticks.to_json %>;

	var burndown = $.jqplot('burndown', [<%= @sprint.open_story_points_per_workday.to_json %>],
	{ 
		title:'Burndown chart',
	  axes:{
      yaxis:{
        min:0, 
        max:<%= @sprint.total_story_points %>,
      }, 
      xaxis:{ticks:xticks},
    },

	  series:[{color:'#ff7800'}]
	});

});
</script>
