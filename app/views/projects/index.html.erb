<% title "All projects" %>

<ul class="fancy">
<% @projects.each do |project| %>
  <li>
    <div>
      <div class="name"><%= link_to project.name, project %></div>
      <div class="edit"><%= link_to 'Edit', edit_project_path(project) %></div>
      <div class="destroy"><%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete %></div>
    </div>
  </li>
<% end %>
</ul>

<br />

<%= link_to 'New Project', new_project_path %>
