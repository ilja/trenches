<li class="story" data-id="<%= story.id %>">
  <div class="storyheader">
    <div class="expand"><img src="/images/open.png" alt="open" /></div>
    <div class="id">16</div>
    <div class="story-menu">
      <div class="description"><img src="/images/new.png" alt="open" title="<%= story.description %>"/></div>
      <div class="notes"><img src="/images/new.png" alt="open" /></div>
      <div class="priority"><%= story.priority %></div>
      <div class="points"><%= story.points %></div>
    </div>
    <div class="naam"><%= story.name %> (Bob)</div>
  </div>
  <div class="storybody">
    <div class="full-description"><%= story.description %></div>
    <div><%= link_to 'Show', project_story_path(story.project, story) %></div>
    <div><%= link_to 'Edit', edit_project_story_path(story.project, story) %></div>
    <div><%= link_to 'Destroy', project_story_path(story.project, story), :confirm => 'Are you sure?', :method => :delete %></div>
  </div>
</li>
