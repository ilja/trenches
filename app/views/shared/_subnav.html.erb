<% unless @project.nil? || @project.new_record? %>
<div id="subnav">
  <ul>
    <li><%= link_to "product backlog", backlog_path(@project) %></li>
    <li><%= link_to "sprints", project_sprints_path(@project) %></li>
    
    <% if @sprint && @sprint.new_record? == false %>
    	<li><%= link_to 'planning', sprint_planning_path(@project, @sprint) %></li>    
    <% end %>
    
    <% if current_user && current_user.sprint_id && @project.sprints.count > 0  
        sprint = @project.sprints.where(:id => current_user.sprint_id)
          unless sprint.blank?
    %>
   		<li><%= link_to 'my active sprint', project_sprint_path(@project, sprint) %></li>
        <% end %>
    <% end %>
  </ul>
</div>
<% end %>

