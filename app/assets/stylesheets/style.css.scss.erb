@import "shared.scss";

a {
  text-decoration: none;
  color: $link-color;
}

a:visited {
  color: $link-color;
}

a:hover {
  color: $link-color - 100;
}

body {
  font-family: $font1;
  font-size: 12px;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  background: $bg-color;
}

#logo {
  float: left;
  width: 100px;
  height: 50px;
  font-size: 40px;
  font-weight: bold;
  padding-top: 6px;
  padding-left: 0px;
  text-shadow: 0px 0px 3px rgba(5, 5, 5, 0.3);
  color: #ff7800;
  font-family: $font1;
}

#logo a {
  color: #ff7800;
}

#topnav {
  overflow: auto;
}

#topnav  ul {
    border-color: $main-color;
    border-style: none solid solid solid;
    border-width: 1px;
    background: $nav-bg;

    padding: 2px 5px 2px 5px;
    margin: 0px;
    height: 18px;
    float: right;
    /*text-shadow: -1px -1px 1px rgba(0, 0, 0, 0.2);

    @include rounded-bottom-left;
    @include rounded-bottom-right;*/

    font-family: $font1;
    font-size: 12px;
    text-shadow: 1px 1px 0 #fff;

    list-style: none;
    white-space: nowrap;
  }

#topnav  a { color: $link-color; }
#topnav  a:active { /*font-weight: bold;*/ }

#topnav  li {
    display: inline;
    padding: 0;
    margin: 0;

  }

#topnav  li:before {
    content: "| ";
    color: $border-color;
  }
#topnav  li:first-child:before { content: ""; }





#container {
  width:940px;
  text-align:left;
  left: 50%;
  margin:0px auto;
  overflow: visible;

}

header {
  clear: both;
  overflow: auto;
}
header h1 {
  float: left;
}

nav.header-right{
  float: right;
  margin: 16px 0;
}

div#main {
  display: table;
  margin: 0;
  width: 100%;
}

section.sprint-container {
  width: 640px;
  padding-right: 20px;


  display: table-cell;
   vertical-align: top;
}

section.backlog-container, section.sprints-container {
  width: 940px;
  display: table-cell;
  vertical-align: top;
  float: left;
}


nav#togglebuttons {
  float: right;
}

nav.button-container {
  padding-bottom: 10px;
  overflow: auto;
}

aside {
  display: table-cell;
   vertical-align: top;
  width: 280px;


}


blockquote {
  margin: 10px 0px 18px 10px;

  border-left: 5px solid #eee;
  padding-left: 15px;
}
blockquote p {
  font-size: 14px;
  font-weight: 300;
  line-height: 18px;
  margin-bottom: 0;
}
blockquote small {
  display: block;
  font-size: 12px;
  font-weight: 300;
  line-height: 18px;
  color: #bfbfbf;
}
blockquote small:before {
  content: '\2014 \00A0';
}



h2.sprint-time {
  padding: 0px;
  margin: 0px;
  text-align: center;
}


div.progress-bar {
  width: 100%;
  border: 1px solid gray;
  height: 20px;
}
div.progress-bar span {
  display: block;
  height: 100%;
  background: green;
}

