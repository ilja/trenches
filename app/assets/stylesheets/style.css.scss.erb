div.full-description {
  p {
    margin: 6px 0px;
  }
}

li.story {
	list-style: none;
	background: #f9f9f9;
	border-left: $bnt-border-normal;
  border-right: $bnt-border-normal;
  border-bottom: $bnt-border-normal;
  overflow: hidden;

  /*width: inherit;
	margin-bottom: 5px;
	padding: 3px;
	position: relative;*/

  /*
  @include rounded-left;
  @include rounded-right;
  @include inset-shadow;
  */



  div {
    /*  border: 1px solid red; */
    display: inline-block;
    vertical-align: middle;



  }
    .grip {
      width: 10px;
      height: 22px;
      float: left;
      cursor: move;
    }

    .expand {
      width: 22px;
      height: 22px;
      float: left;
      cursor: pointer;
    }
    .id {
      width: 20px;
      float: left;
      padding-top: 3px;
    }
    .naam {
      margin-left: auto;
      margin-right: auto;
      /* width: 440px; */
      font-weight: bold;
      display: block;
			height: 22px;
			line-height: 22px;
      @include ellipsis;
    }
    .priority {
      width: auto;
      @include ellipsis;
    }
    .description {
      width: 20px;
      height: 20px;
    }
    .notes { width: 20px; }
    .points {
			width: 20px;
			height: 20px;
			line-height: 20px;
			text-align: center;
			border: $bnt-border-normal;
			@include rounded;
			margin-right: 3px;
			background: rgba(255, 255, 255, 0.4);
		}
    .assigned { width: 50px; }



    .storyheader {
    	width: 100%;
      background-image: $nav-bg;
    	padding: 3px 0px 3px 0px;
    }
    .storybody {
    	border-top: $bnt-border-normal;
    	background: white;
    	padding: 3px;
      overflow: auto;
      display: none;
      .edit-story {
        float: right;
      }
    }


    .story-menu {
      float: right;
    }
}

li.story:first-child {
  border-top: $bnt-border-normal;
}

/* fancy list */
ul.fancy {
  padding: 0 0 $spacer1 0;
  margin: 0;

  li {
    list-style: none;
    background: $nav-bg;
    width: 100%;
    border-left: $bnt-border-normal;
    border-right: $bnt-border-normal;
    border-bottom: $bnt-border-normal;
    border-radius: 0.1em;
    height: 27px;
    a { color: $link-color; }

    article {
      display: table;
      height: 22px;
      line-height: 22px;
      width: 100%;
      padding: 3px 3px;

      div.name {
        display: table-cell;
        vertical-align: top;

        a {
          display: block;
        }
      }
      nav.button-group {
        display: table-cell;
        width: 144px;
        vertical-align: top;
      }
    }
  }

  li:first-child {
    border-top: $bnt-border-normal;
  }

  li:hover {
    background: $nav-bg-hover;
  }
}

div.sortable-list {
  width: 49%;
  background: #f6f6f6;
  border:  $bnt-border-normal;
	margin-top: 0;
  min-height: 100px;
  display: table-cell;
  h1 {
    color: $border-color;
    padding-left: $spacer1;
  }
}

div.sortable-list.backlog {
  float: left;
}

div.sortable-list.sprint {
  float: right;
}


#sortable-backlog, #sortable-sprintlog {
  list-style-type: none;
  margin: 0;
  padding: 0px 0px 5px 0px;
  float: left;
  margin-right: 10px;
  min-height: 100px;
  width: 100%;
}

#sortable-backlog li, #sortable-sprintlog li {
  margin: 0 5px;
  div.naam {
    cursor: move;
  }
}

div#flash_notice {
    padding: $spacer1;
    margin: 0 0 $spacer1 0;
    border: $bnt-border-normal;
    border-radius: 0.2em;
    background: #f6f6f6;
}

div#flash_warning {
    padding: $spacer1;
    margin: 0 0 $spacer1 0;
    border: 1px solid $warning-color;
    background: $warning-background-color;
}

