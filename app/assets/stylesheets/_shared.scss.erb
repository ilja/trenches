$main-color: #EFEFEF;
$font1: 'Droid Sans', arial, sans-serif;
$font2: 'Yanone Kaffeesatz', 'Droid Sans', arial, sans-serif;
$text-color: #333333;

$border-color: #e8e8e8;
$radius: 5px;
$spacer1: 6px;
$nav-bg: asset-url("bg.png", image);
$nav-bg-active: asset-url("bg-active.png", image);
$nav-bg-hover: asset-url("bg-hover.png", image);
$bg-title: asset-url("bg-title.png", image);

$bnt-border-normal: 1px solid $border-color;
$bnt-border-highlight: 1px solid #fff;

$bg-color: #fff;
$link-color: #343638;
$link-color2: #ff7800;
$warning-color: #FF2500;
$warning-background-color: #F7EDDD;

@mixin rounded-left {
  @include rounded-top-left;
  @include rounded-bottom-left;
}


@mixin rounded-top-left {
  border-top-left-radius: $radius;
  -moz-border-radius-topleft: $radius;
  -webkit-border-top-left-radius: $radius;
}

@mixin rounded-bottom-left {
  border-bottom-left-radius: $radius;
  -moz-border-radius-bottomleft: $radius;
  -webkit-border-bottom-left-radius: $radius;
}

@mixin rounded-right {
  @include rounded-top-right;
  @include rounded-bottom-right;
}

@mixin rounded-top-right {
  border-top-right-radius: $radius;
  -moz-border-radius-topright: $radius;
  -webkit-border-top-right-radius: $radius;
}

@mixin rounded-bottom-right {
  border-bottom-right-radius: $radius;
  -moz-border-radius-bottomright: $radius;
  -webkit-border-bottom-right-radius: $radius;
}

@mixin rounded {
	@include rounded-right;
	@include rounded-left;
}


@mixin inset-shadow {
   -moz-box-shadow:inset 0 0 5px $border-color;
   -webkit-box-shadow:inset 0 0 5px $border-color;
   box-shadow:inset 0 0 5px $border-color;
}

@mixin glow {
   -moz-box-shadow: 0 0 5px $border-color;
   -webkit-box-shadow: 0 0 5px $border-color;
   box-shadow: 0 0 5px $border-color;
}

@mixin ellipsis {
  text-overflow: ellipsis;
  overflow: hidden;
  -o-text-overflow: ellipsis;
  white-space: nowrap;
}
